{% extends 'base_front.html.twig' %}

{% block title %}Reservation de {{ booking.gift.name }}{% endblock %}

{% block body %}
    <div class="gift-details">
        <h1>Détails de la réservation</h1>


        <table class="table browse-gift">
            <tbody>
                <tr>
                    <th>Nom du cadeau</th>
                    <td>{{ booking.gift.name }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ booking.gift.price }}</td>
                </tr>
                <tr>
                    <th>Provenant de la liste</th>
                    <td>{{ booking.listGift.title }}</td>
                </tr>
                <tr>
                    <th>Crée le</th>
                    <td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ booking.active ? 'Actif' : 'Annulé' }}</td>
                </tr>
                
            </tbody>
        </table>

        <div class="actions">

            <a href="{{ path('front_app_browse_list_index') }}" class="back-button">Retour</a>
            <a href="{{ path('front_app_browse_list_index') }}" class="cancel-button">Annuler la réservation</a>

        </div>

{% endblock %}
