{% extends 'base_back.html.twig' %}

{% block title %} Fiche utilisateur {% endblock %}
{% block pageTitle %} Fiche utilisateur {% endblock %}

{% block body %}
    <div class="flex md:flex-row flex-col w-full md:items-center md:justify-between flex-nowrap">
        <div>
            <h1 class="text-3xl font-bold md:mb-0 mb-4">Fiche utilisateur</h1>
        </div>

        <div class="flex">
            {% if app.user.id != user.id %} {{ include('back/user/_delete_form.html.twig') }} {% endif %}
            <a href="{{ path('back_app_user_index') }}" class="ml-2 px-2 py-1 rounded-md bg-blue-500 text-sky-100 hover:bg-blue-700"><i class="fa-solid fa-arrow-left-long mr-2"></i> Retour à la liste des utilisateurs</a>
        </div>
    </div>
    <div class="md:container mx-auto lg:my-5 my-2 lg:p-5">
        <div class="md:flex no-wrap md:-mx-2 w-full">
            <div class="w-full md:w-3/12 md:mx-2 bg-gray-50">
                <div class="p-3 border-t-4 border-secondary">
                    <h1 class="text-gray-900 font-bold text-xl leading-8 my-1 text-ellipsis overflow-hidden">{{ user.id }}. {{ user.firstname }} {{ user.lastname }}</h1>
                    <p class="text-gray-600 font-lg text-semibold leading-6 text-ellipsis overflow-hidden">{{ user.roles ? user.roles|map(role => role|replace({'ROLE_': ''}))|join(', '): '' }}</p>
                </div>
            </div>

            <div class="w-full md:w-9/12 mx-2 h-64">
                <div class="bg-gray-50 p-3 shadow-sm rounded-sm">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-4">
                        <span class="text-secondary"><i class="fa-solid fa-user"></i></span>
                        <span class="tracking-wide">À propos</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid xl:grid-cols-2 text-sm">
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Genre</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.gender }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Date de naissance</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.born ? user.born|date('d/m/Y') }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Prénom</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.firstname }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Nom</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.lastname }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Métier</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.jobInteger }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Email</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">
                                    <a class="text-blue-800" href="mailto:{{ user.email }}">{{ user.email }}</a>
                                </div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Téléphone</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ user.phone }}</div>
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('back_app_user_edit', {'id': user.id}) }}" class="block w-full bg-secondary text-center transition duration-100 text-white text-md font-semibold rounded-lg hover:bg-primary focus:bg-primary focus:outline-none focus:shadow-outline hover:shadow-xs p-3 my-4 cursor-pointer">Modifier</a>
                </div>

                <div class="my-4"></div>

                <div class="bg-gray-50 p-3 shadow-sm rounded-sm">
                    <div class="grid xl:grid-cols-2">
                        <div>
                            <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                            <span class="text-secondary">
                                <i class="fa-solid fa-address-book"></i>
                            </span>
                                <span class="tracking-wide">Adresses de livraison</span>
                            </div>
                            <ul class="list-inside space-y-2">

                            </ul>
                        </div>
                        <div>
                            <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-3">
                            <span class="text-secondary">
                                <i class="fa-regular fa-address-book"></i>
                            </span>
                                <span class="tracking-wide">Adresses de facturation</span>
                            </div>
                            <ul class="list-inside space-y-2">

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="my-4"></div>
            </div>
        </div>
    </div>
{% endblock %}
