{% extends 'base_back.html.twig' %}

{% block title %} Fiche métier {% endblock %}
{% block pageTitle %} Fiche métier {% endblock %}

{% block body %}
    <div class="flex md:flex-row flex-col w-full md:items-center md:justify-between flex-nowrap">
        <div>
            <h1 class="text-3xl font-bold md:mb-0 mb-4">Fiche métier</h1>
        </div>

        <div class="flex">
            {{ include('back/job/_delete_form.html.twig') }}
            <a href="{{ path('back_app_job_index') }}" class="ml-2 px-2 py-1 rounded-md bg-blue-500 text-sky-100 hover:bg-blue-700"><i class="fa-solid fa-arrow-left-long mr-2"></i> Retour à la liste des métiers</a>
        </div>
    </div>
    <div class="md:container mx-auto lg:my-5 my-2 lg:p-5">
        <div class="md:flex no-wrap md:-mx-2 w-full">
            <div class="w-full md:w-3/12 md:mx-2 bg-gray-50">
                <div class="p-3 border-t-4 border-secondary">
                    <h1 class="text-gray-900 font-bold text-xl leading-8 my-1 text-ellipsis overflow-hidden">{{ job.title }}</h1>
                </div>
            </div>

            <div class="w-full md:w-9/12 mx-2 h-64">
                <div class="bg-gray-50 p-3 shadow-sm rounded-sm">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8 mb-4">
                        <span class="text-secondary"><i class="fa-solid fa-user"></i></span>
                        <span class="tracking-wide">À propos</span>
                    </div>
                    <div class="text-gray-700">
                        <div class="grid xl:grid-cols-2 text-sm">
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Nom</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ job.title }}</div>
                            </div>
                            <div class="grid grid-cols-2">
                                <div class="px-4 py-2 font-semibold">Description</div>
                                <div class="px-4 py-2 text-ellipsis overflow-hidden">{{ job.description }}</div>
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('back_app_job_edit', {'id': job.id}) }}" class="block w-full bg-secondary text-center transition duration-100 text-white text-md font-semibold rounded-lg hover:bg-primary focus:bg-primary focus:outline-none focus:shadow-outline hover:shadow-xs p-3 my-4 cursor-pointer">Modifier</a>
                </div>

                <div class="my-4"></div>
            </div>
        </div>
    </div>
{% endblock %}
