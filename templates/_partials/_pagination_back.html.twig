{% if pages > 1 %}
    <div class="w-full flex items-center justify-center border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
        <div class="sm:flex sm:flex-1 sm:items-center sm:justify-center">
            <div>
                <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                    {% if currentPage > 1 %}
                        <a href="{{ path(path, {page: currentPage - 1}) }}" class="relative inline-flex items-center rounded-l-md border border-gray-300 bg-white px-2 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20">
                            <i class="fa-solid fa-arrow-left"></i>
                        </a>
                    {% endif %}

                    {% for page in 1..pages %}
                        {% if currentPage == page %}
                            <a href="{{ path(path, {page: page}) }}" aria-current="page" class="relative z-10 inline-flex items-center border border-blue-500 bg-blue-50 px-4 py-2 text-sm font-medium text-blue-600 focus:z-20">{{ page }}</a>
                        {% else %}
                            <a href="{{ path(path, {page: page}) }}" class="relative inline-flex items-center border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if currentPage < pages %}
                        <a href="{{ path(path, {page: currentPage + 1}) }}" class="elative inline-flex items-center rounded-r-md border border-gray-300 bg-white px-2 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-20">
                            <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    {% endif %}
                </nav>
            </div>
        </div>
    </div>
{% endif %}